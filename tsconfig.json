{
  "compileOnSave": false,
  "compilerOptions": {
    "watch": false,
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution":"node",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*/**/__tests__"
  ]
}
